<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TinyDeveloperHelp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorPrimaryVariant">@color/colorBackgroundMain</item>
        <item name="colorOnPrimary">@color/nextBtn</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/sans_web_medium</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/sans_web_medium</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="nextBtnStyle">
        <item name="colorPrimary">@color/nextBtn</item>
        <item name="android:textSize">20sp</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="exitBtnStyle">
        <item name="colorPrimary">@color/colorBackgroundMain</item>
        <item name="background">@drawable/exit_account_shape</item>
        <item name="android:textSize">20sp</item>
        <item name="colorOnPrimary">@color/red</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="stayBtnStyle">
        <item name="colorPrimary">@color/stayBtn</item>
        <item name="android:textSize">20sp</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="toolbarButton">
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="dialogMain" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/select_image_shape</item>
    </style>

    <style name="bigText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="veryBigText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="countText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
    </style>


</resources>